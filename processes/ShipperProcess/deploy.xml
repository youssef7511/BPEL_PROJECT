        xmlns:store="http://supplychain.example.com/store"
        xmlns:tns="http://supplychain.example.com/bpel/shipper">

    <process name="tns:ShipperProcess">
        <active>true</active>

        <!-- Service exposÃ© : reÃ§oit les demandes du Manufacturer -->
        <provide partnerLink="manufacturerPL">
